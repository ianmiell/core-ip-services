<% node['forward-zone'].each do |zone, forwardtoips| -%>
zone "<%= zone %>" {
  type forward;
  forward only;
  forwarders { 
  <% forwardtoips.each do |forwardtoip| -%>
    <% unless forwardtoip.empty? -%>
    <%= forwardtoip %>;
    <% end %>
  <% end %>
  };
};
<% end %>

zone "coreip-a-discovery.intranet" {
	type master;
	file "/var/named/data/db.coreip-a-discovery.intranet";
};
zone "coreip-b-discovery.intranet" {
	type master;
	file "/var/named/data/db.coreip-b-discovery.intranet";
};

